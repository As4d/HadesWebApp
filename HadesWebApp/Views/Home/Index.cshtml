@model UserModel

<header class="pb-3 mb-4 border-bottom">
    <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
        <img src="images/logos/hades60x60.png"/>
        <span class="fs-4">Hades</span>
    </a>
</header>

<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Hades</h1>
        <p class="col-md-8 fs-4">This application highlights possible exploits and vulnerabilities in Windows 10. It also locates files on your system that could be a possibles security risk, for example files containing sensitive data or passwords.</p>
    </div>
</div>

<div class="row align-items-md-stretch">
    <div class="col-md-6">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
            <h2>Secure your every bit</h2>
            <p>Download Hades now!</p>
            <a href="~/downloads/test.zip" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Download</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="h-100 p-5 bg-light border rounded-3">
            <h2>Hades in the wild</h2>
            
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td>No. of customers</td>
                        <td>@Model.NoOfUsers</td>
                    </tr>
                <tr>
                    <td>No. of scans</td>
                    <td>@Model.NoOfScans</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
